<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.giris.GirisYapFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewGirisYap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/giris_yap"
            android:textColor="@color/text_color_koyu"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewBilgi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/giris_yapmak_icin_bilgi"
            android:textAlignment="center"
            android:textColor="@color/hint_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextMail"
            android:layout_width="330dp"
            android:layout_height="58dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:maxLines="16"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:textColor="@color/black"
            android:autofillHints="false" />

        <EditText
            android:id="@+id/editTextSifre"
            android:layout_width="330dp"
            android:layout_height="58dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:maxLines="16"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:hint="@string/sifre"
            android:textColor="@color/black"
            android:autofillHints="false" />

        <Button
            android:id="@+id/buttonGirisYap"
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/kayit_button_arka_plani"
            android:backgroundTint="@color/sari"
            android:text="@string/giris_yap"
            android:textAllCaps="false"
            android:textColor="@color/text_color_koyu"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSifremiUnuttum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sifreni_mi_unuttun"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/futag_seffaf"
            android:contentDescription="@string/futag_icon" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewHesap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hesabiniz_yok_mu"
                android:textAlignment="center"
                android:textColor="@color/hint_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewKayitOl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/kayit_ol"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/sari"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>