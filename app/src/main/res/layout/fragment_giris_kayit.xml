<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.acilis.GirisKayitFragment">


    <ImageView
        android:id="@+id/imageViewFutag"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/devre_gorunumu"
        android:src="@drawable/futag_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewKulupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/bir_kulupten_daha_fazlasi"
        android:textColor="@color/text_color_koyu"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFutag"
        app:layout_constraintStart_toStartOf="@+id/imageViewFutag"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFutag" />

    <TextView
        android:id="@+id/textViewKulupMetin"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/giris_metin"
        android:textAlignment="center"
        android:textColor="@color/hint_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewKulupText" />

    <Button
        android:id="@+id/buttonGirisYap"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/kayit_button_arka_plani"
        android:backgroundTint="@color/sari"
        android:text="@string/giris_yap"
        android:textAllCaps="false"
        android:textColor="@color/text_color_koyu"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonKayitOl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonKayitOl"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/kayit_button_arka_plani"
        android:text="@string/kayit_ol"
        android:textAllCaps="false"
        android:textColor="@color/text_color_koyu"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>