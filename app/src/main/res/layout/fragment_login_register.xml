<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/page_background_color_light_black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.login.login_register.LoginRegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ziplayanarianimation.json"
            app:lottie_loop="true"
            app:lottie_speed="1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/imageViewFutagCircuit"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="@drawable/circuit"
                android:gravity="bottom"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewFutag"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="305dp"
                android:contentDescription="@string/circuit_view"
                android:src="@drawable/futag_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewClubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/bir_kulupten_daha_fazlasi"
                android:textColor="@color/text_color_dark"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textViewClubDescription"
                app:layout_constraintStart_toStartOf="@+id/textViewClubDescription"
                app:layout_constraintTop_toBottomOf="@+id/imageViewFutag" />

            <TextView
                android:id="@+id/textViewClubDescription"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/intro_text"
                android:textAlignment="center"
                android:textColor="@color/hint_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewClubText" />

            <Button
                android:id="@+id/buttonLogIn"
                android:layout_width="320dp"
                android:layout_height="54dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/register_button_background"
                android:backgroundTint="@color/button_background_yellow"
                android:text="@string/log_in"
                android:textAllCaps="false"
                android:textColor="@color/text_color_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewClubDescription" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="320dp"
                android:layout_height="54dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/register_button_background"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@color/text_color_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonLogIn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>